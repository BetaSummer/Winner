extends ../public/layout.jade
block append css
  link(rel='stylesheet', href='/dist/css/setting.css')
block content
  div.user-setting-content
    div.user-setting-edit-box
      div.setting-top
        span.setting-title 第三方绑定
      div.user-setting-form
        form(action="#" methods="POST")
          p.setting-line
            label(for="oldPassword") 绑定
            a(href="#",class="bind-with-qq")
              img(src="/dist/images/qq.jpg", alt="")
            a(href="#",class="cancelBind") 取消绑定
          p.setting-line
            label(for="newPassword") 绑定
            a(href="#",class="bind-with-wechat")
              img(src="/dist/images/wechat.jpg", alt="")
            a(href="#",class="cancelBind") 取消绑定
          p.setting-line
            input(type="submit",value="保存",class="setting-save-btn")
    include settingSideBar
