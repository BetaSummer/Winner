extends ../public/layout.jade
block append css
  link(rel='stylesheet', href='/dist/css/setting.css')
block content
  div.user-setting-content
    div.user-setting-edit-box
      div.setting-top
        span.setting-title 帐号安全
      div.user-setting-form
        form(action="#" methods="POST")
          p.setting-line
            label(for="oldPassword") 旧密码
            input(type="password" id="oldPassword" name="oldPassword")
            a.forget-password 忘记密码？
          p.setting-line
            label(for="newPassword") 新密码
            input(type="password",id="newPassword",name="newPassword")
          p.setting-line
            label(for="newPasswordAgain") 确认密码
            input(type="password",id="newPasswordAgain",name="newPasswordAgain")
          p.setting-line
            input(type="submit",value="保存",class="setting-save-btn")
    include settingSideBar
