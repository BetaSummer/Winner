extends ../layout.pug
block append css
  link(rel='stylesheet', href='/dist/css/commodityList.css')
block content
  div.commodity-list
    div.commodity-list-top
      div.sort-btn.ui.dropdown
        i.filter.icon
        span.text 最新商品
        .menu
          span 优质用户
      a(href="/commodity/", class="publish-btn ui inverted green button") 发布闲置
    .ui.divider
  div.commodity-nav
    div.commodity-first-nav
      .item.active
        i.icon.certificate
        a(href="/category/") 全部
      each item in firstCategories
        .item
          i.icon.certificate
          span(data-id=item._id)= item.name
    div.commodity-second-nav
      .item.active
        a(href="/category/") 全部
      each item in secondCategories
        .item
          a(data-id=item._id, href="/category/"+item._id)= item.name
  .commodity-cards
    - for (var i = 0,len = commodities.length; i < len; i++)
      include ../commodity/card
